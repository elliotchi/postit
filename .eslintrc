{
  "parser": "babel-eslint",
  "env": {
    "es6": true,
    "browser": true
  },
  "parser-options": {
    "ecmaVersion": "6",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread ": true
    }
  },
  "extends": ["eslint:recommended", "plugin:react/recommended", "standard"],
  "plugins": [
    "react"
  ],
  "rules": {
    "no-extra-semi": 0,
    "semi": 0,
    "no-trailing-spaces": 0,
    "space-before-function-paren": 0
  }
}